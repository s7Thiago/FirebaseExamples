<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.thiagosousa.firebaseexamples">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="true"
        android:icon="@drawable/firebase_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/firebase_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activitys.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.RegisterActivity"
            android:exported="true"
            android:label="@string/button_register" />
        <activity
            android:name=".activitys.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:parentActivityName=".useful.UtilActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.thiagosousa.firebaseexamples.useful.UtilActivity" />
        </activity>
        <activity
            android:name=".activitys.FirebaseDatabaseActivity"
            android:label="@string/database_screen_label"
            android:screenOrientation="portrait"
            android:theme="@style/messages_screen_theme" />
        <activity android:name=".activitys.SpinnerActivity" />
        <activity
            android:name=".activitys.CustomListActivity"
            android:label="Material classification"
            android:screenOrientation="portrait" />
        <activity android:name=".activitys.ResiduoDetailActivity"></activity>
    </application>

</manifest>